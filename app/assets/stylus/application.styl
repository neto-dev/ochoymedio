gris = #1A1A1A
rojo = #E32143

*
	font-family: 'Open Sans', sans-serif;
	box-sizing: border-box;

html, body
	height 100%
	width 100%

body
	margin 0
	padding 0
	font-size 16px
	font-family: 'Open Sans', sans-serif;

p, h1, h2, h3
	padding 0
	margin 0

#menu-index
	position fixed
	display: -webkit-box;
	display: -moz-box;
	display: -ms-flexbox;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-flow: row wrap;
	justify-content: space-around;
	top 0
	left 0
	height 100%
	width 100%
	& li
		height 100%
		position relative
		list-style none
		width 50%
		& a
			text-decoration none
			color white
			font-size 1.6em
			letter-spacing: 1px;
			line-height 200px
			text-align center
			cursor: pointer;
			position: absolute;
			top: 50%;
			left: 50%;
			width: 70%;
			height: 200px;
			margin-top: -100px;
			margin-left: -35%;
	& .video
		transition all .6s ease-in-out
		&:hover
			background rgba(0, 0, 0, .65)
		& a:hover .video
			background rgba(0, 0, 0, .95)
	& .photo
		transition all .6s ease-in-out
		&:hover
			background rgba(0, 0, 0, .65)

#intro
    & .fullscreen-bg__video
		position: fixed;
		top: 50%;
		left: 50%;
		min-width: 100%;
		min-height: 100%;
		width: auto;
		height: auto;
		z-index: -100;
		-webkit-transform: translateX(-50%) translateY(-50%);
		transform: translateX(-50%) translateY(-50%);
		background-size: cover;

.cortina
	cursor pointer
	display none
	background rgba(0, 0, 0, .65)
	position fixed
	top 0
	left 0
	height 100%
	width 100%

.show
	display none
	position absolute
	top 0
	left 0
	right 0
	margin 4em auto
	max-width 960px
	z-index 10
	& .close
		display none
		position absolute
		top -.1em
		color rojo
		font-size 1.5em
		right .1em
	& img
		width 100%

#navigation
	background white
	position fixed
	top 0
	left 0
	width 100%
	& .logo
		max-width 140px
		position absolute 
		top .1em
		left .5em
		& img
			width 100%
	& .content
		margin 0 auto
		padding .4em 0
		text-align right
		width 93%
		& li
			cursor pointer
			list-style none
			display inline-block
			padding .4em
			& span
				font-size 1.4em
				color #373737
				transition all 250ms ease-in-out
				&:hover
					color rojo
	
#menu
	display none
	background rgba(0, 0, 0, .75)
	height 100%
	position fixed
	top 0
	right 0
	width 50%
	& .close-menu
		cursor pointer
		position absolute
		top 1.4em
		right 1.5em
		color white
		font-size 1.8em
		font-weight bold
		transition all .7s ease
		&:hover
			color rojo
	& .content
		position absolute
		top 30%
		text-align center
		left 0px
		right 0px
		& li
			list-style none
			padding .8em 0
			width 100%
			& a
				color white
				text-decoration none
				font-size 1.7em
				transition all 250ms ease-in-out
				&:hover
					border-bottom 3px solid white

#photography
	padding-top 5.5em
	width 100%
	& .gallery
		padding .5em
		width 100%
		& .content
			margin 0 auto
			-moz-column-count: 3;
			-moz-column-gap: 10px;
			-moz-column-fill: auto;
			-webkit-column-count: 3;
			-webkit-column-gap: 10px;
			-webkit-column-fill: auto;
			column-count: 3;
			column-gap: 5px;
			column-fill: auto;
			width 95%
			& .row
				width 100%
				& img
					cursor pointer
					width 100%
	& .add-photo
		color gris
		display block
		border 2px solid gris
		background none
		font-size 1.2em
		text-decoration none
		text-align center
		padding .5em .8em
		margin 0 auto
		transition all 300ms ease-in-out
		width 200px
		&:hover
			color rojo
			display block
			border 2px solid rojo
	& .title
		color gris
		font-weight normal
		font-size 1.6em
		padding .6em 2em
	& .form-photography
		padding 2em 0
		width 100%
		& .content
			max-width 960px
			margin 0 auto
			& form
				& .field
					& input[type="text"]
						border 2px solid gris
						padding .5em 1em
						font-size 1.1em
						margin 1em 0
						width 100%
					& textarea
						border 2px solid gris
						padding .5em 1em
						font-size 1.1em
						margin 1em 0
						height 200px
						width 100%
				& .field-select
					padding-bottom 2em
					& h4
						color gris
						margin 0
					& select
						cursor pointer
						background none
						border 2px solid gris
						padding .5em 1em
						font-size 1.1em
						border-radius none
						-webkit-appearance: none;
						width 100%
				& .field-file
					position relative
					margin 1em 0
					height 80px
					& span
						background gris
						color white
						padding .66em 1em
						width 100%
						z-index 10
					& input[type="file"]
						position absolute
						top 0
						left 0
						margin 0
						padding 0
						font-size 20px
						cursor pointer
						padding .5em
						opacity 0
						margin-top -10px
						width 100%
					& #uploadFile
						display inline-block
						border 2px solid gris
						padding .5em 1em
						text-align center
						font-size 1.1em
						margin-top -11px
						position absolute
						top 0
						left 0
						width 100%
						z-index -10
				& .actions
					& input[type="submit"]
						color gris
						display block
						border 2px solid gris
						background none
						font-size 1.2em
						text-decoration none
						text-align center
						padding .5em .8em
						margin 0 auto
						transition all 300ms ease-in-out
						width 250px
						transition all 300ms ease-in-out
						&:hover
							color rojo
							display block
							border 2px solid rojo
			
